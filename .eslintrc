{
  "extends": "airbnb",
  "env": {
    "es6": true,
    "browser": true,
    "node": false
  },
  "globals": {
    "exports": true,
    "module": true,
  },
  "parser": "babel-eslint",
  "parserOptions": {
    "ecmaFeatures": {
      "jsx": true,
    }
  },
  "rules": {
    "no-bitwise": 0,
    "react/jsx-filename-extension": ["error", { "extensions": [".js", ".jsx"] }],
  },
}
